<div class="row">
  <% if @posts.present? %>
		<% @posts.each do |post| %>
			<div class="card col-3" style="width: 18rem; margin-right: 30px; margin-bottom: 30px;">
				<div class="card-body">
					<h2 class="card-title"><%= post.title %></h2>
					<h4 class="card-text">작성자 : <%= post.user.username %></h4>
					<p class="card-text">조회수 : <%= post.view_count %></p>
					<a href="/posts/<%= post.id %>" class="btn btn-primary">글 보러가기</a>
				</div>
			</div>
		<% end %>
	<% end %>
</div>